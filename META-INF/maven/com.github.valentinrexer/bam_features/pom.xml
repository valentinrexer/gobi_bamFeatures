<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.valentinrexer</groupId>
    <artifactId>bam_features</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>

        <dependency>
            <groupId>com.github.samtools</groupId>
            <artifactId>htsjdk</artifactId>
            <version>4.3.0</version>
        </dependency>

        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
            <version>1.5.0</version>
        </dependency>

        <!-- Now a normal dependency, installed into ~/.m2/repository -->
        <dependency>
            <groupId>edu.lmu.gobi</groupId>
            <artifactId>augmentedtree</artifactId>
            <version>1.0</version>
        </dependency>

    </dependencies>


    <build>
        <plugins>

            <!-- Include your own .java files inside the JAR under /sources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
                <executions>
                    <execution>
                        <id>include-own-sources</id>
                        <phase>process-resources</phase>
                        <goals><goal>copy-resources</goal></goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/sources</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/java</directory>
                                    <includes>
                                        <include>com/github/valentinrexer/**/*.java</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


            <!-- Shade plugin: create runnable fat/uber JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.0</version>

                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals><goal>shade</goal></goals>

                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>

                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                        <!-- Source-Dateien von Dependencies ausschließen -->
                                        <exclude>augmentedTree/*.java</exclude>
                                        <exclude>**/*.java</exclude>
                                    </excludes>
                                </filter>

                                <!-- htsjdk: NUR samtools behalten, ALLES andere raus -->
                                <filter>
                                    <artifact>com.github.samtools:htsjdk</artifact>
                                    <includes>
                                        <!-- Nur samtools Klassen behalten -->
                                        <include>htsjdk/samtools/**</include>
                                    </includes>
                                    <excludes>
                                        <!-- Aber CRAM innerhalb samtools ausschließen -->
                                        <exclude>htsjdk/samtools/cram/**</exclude>
                                        <!-- BAM Index Writer (oft nicht nötig) -->
                                        <exclude>htsjdk/samtools/BAMIndexer*</exclude>
                                        <!-- SRA Support -->
                                        <exclude>htsjdk/samtools/sra/**</exclude>
                                        <!-- Filter utilities die du vermutlich nicht brauchst -->
                                        <exclude>htsjdk/samtools/filter/**</exclude>
                                        <!-- Metrics collectors -->
                                        <exclude>htsjdk/samtools/metrics/**</exclude>
                                        <!-- Benchmarking -->
                                        <exclude>htsjdk/samtools/benchmark/**</exclude>
                                    </excludes>
                                </filter>
                            </filters>

                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>com.github.valentinrexer.Main</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>